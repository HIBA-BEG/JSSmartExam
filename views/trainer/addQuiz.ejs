</head>
</head>

<body>
  <div class="form-container">
    <form action="/TRAINER/addOneQuiz" method="POST" class="student-form">
      <div class="form-row">
        <div class="form-group">
          <label for="title">Title :</label>
          <input type="text" id="title" name="title" required>
        </div>
        <div class="form-group">
          <label for="successScore">Success Score:</label>
          <input type="text" id="successScore" name="successScore" required>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="lastName">Subject:</label>
          <select id="subject" name="sujetID" required>
            <% subjects.forEach(function(subject) { %>
            <option value="<%= subject.id_sujet %>"><%= subject.title %></option>
            <% }); %>
          </select>
        </div>
        <!-- <div class="form-group">
          <label for="subTopic">Sub Topic:</label>
          <select id="subTopic" name="subTopicID" required>

          </select>
        </div> -->
      </div>
      <div class="buttons">
        <a href="/TRAINER/addOneQuiz" class="back-btn">Back</a>
        <button type="submit" class="submit-btn">Next</button>
      </div>
    </form>
  </div>
