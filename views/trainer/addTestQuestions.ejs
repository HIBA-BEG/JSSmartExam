<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add students</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/addStudent.css">
</head>
</head>

<body>
  <div class="header">
   
   <form action="">

<div>
  
</div>
    <div class="form-row">


      <div class="form-group">
        <label for="firstName">Subject :</label>
        <select id="subjectSelect" name="subject" class="form-control" required>
          <option value="">Select a subject</option>
          <% subjects.forEach(subject => { %>
              <option value="<%= subject.id_sujet %>"><%= subject.title %></option>
          <% }); %>
      </select>      </div>


      <div class="form-group">
        <label for="dob">Level :</label>
        <select id="levelSelect" name="level" class="form-control" required>
          <option value="">Select a level</option>
          <% levels.forEach(level => { %>
            <option value="<%= level.id %>"><%= level.description %></option>
          <% }); %>
        </select>
      </div>

      <div class="form-group">
        <label for="firstName">numbers of answers :</label>
        <input type="text" id="prenom" name="prenom" required>
      </div>

      <div class="form-group">
        <label for="dob">numbers of corecct answers :</label>
        <input type="date" id="dateNaissance" name="dateNaissance" required>
      </div>
    </div>

   </form>
  </div>
  <div class="form-container">
    <form action="/" method="POST" class="student-form">
     
 
      <div class="form-group">
        <label for="address">Address :</label>
        <input type="text" id="adresse" name="adresse" required>
      </div>
      
      <div class="buttons">
        <a href="/TRAINER/AllStudents" class="back-btn">Back</a>
        <button type="submit" class="submit-btn">Submit</button>
      </div>
    </form>
  </div>
</body>

</html>